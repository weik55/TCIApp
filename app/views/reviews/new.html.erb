<div id="review-new-view">
	<h2>
		<% if params[:movie_title] && !params[:movie_title].empty? && params[:movie_id] && !params[:movie_id].empty? %>
			<%= link_to params[:movie_title], movie_path(params[:movie_id]), :class => "title-link" %>	
		<% else %>
			Uh oh, undefined movie!
		<% end %>
	</h2>
	<%= render 'review_form' %>
</div>